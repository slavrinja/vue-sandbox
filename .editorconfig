root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
max_line_length = off

[*.md]
trim_trailing_whitespace = false

[*.php]
indent_size = 4

[*.{yml, yaml, vue, scss, css, json, lock}]
indent_size = 2

[tests/**.js]
indent_size = 2

[resources/js/admin/store/**.js]
indent_size = 2

[resources/js/admin/app.js]
indent_size = 2


